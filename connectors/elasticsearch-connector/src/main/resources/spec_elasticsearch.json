{
  "properties": {
    "name": "Elasticsearch",
    "icon": "icons/elasticsearch.png",
    "doc" : "${doc}",
    "id": "elasticsearch",
    "authentication": "Beta",
    "tags": ["Database", "schema-free"]
  },
  "configOptions": {
    "connection": {
      "type": "object",
      "properties": {
        "host": {
          "required": true,
          "type": "string",
          "title": "${host}",
          "x-decorator": "FormItem",
          "x-component": "Input",
          "apiServerKey": "database_host",
          "x-index": 1
        },
        "port": {
          "required": true,
          "type": "string",
          "title": "${port}",
          "x-decorator": "FormItem",
          "x-component": "InputNumber",
          "apiServerKey": "database_port",
          "x-index": 2
        },
        "user": {
          "type": "string",
          "title": "${user}",
          "x-decorator": "FormItem",
          "x-component": "Input",
          "apiServerKey": "database_username",
          "x-index": 3
        },
        "password": {
          "type": "string",
          "title": "${password}",
          "x-decorator": "FormItem",
          "x-component": "Password",
          "apiServerKey": "database_password",
          "x-index": 4
        }
      }
    }
  },
  "messages": {
    "default": "en_US",
    "en_US": {
      "doc": "docs/elasticsearch_en_US.md",
      "host": "DB Host",
      "port": "Port",
      "user" : "User Name",
      "password" : "Password"
    },
    "zh_CN": {
      "doc": "docs/elasticsearch_zh_CN.md",
      "host": "数据库地址",
      "port": "端口",
      "user" : "账号",
      "password" : "密码"
    },
    "zh_TW": {
      "doc": "docs/elasticsearch_zh_TW.md",
      "host": "數據庫地址",
      "port": "端口",
      "user" : "賬號",
      "password" : "密碼"
    }
  },
  "dataTypes": {
    "string": {
      "queryOnly": true,
      "to": "TapString"
    },
    "text": {
      "byte": "4g",
      "to": "TapString"
    },
    "keyword": {
      "byte": 32766,
      "to": "TapString"
    },
    "long": {
      "bit": 64,
      "priority": 3,
      "value": [
        -9223372036854775808,
        9223372036854775807
      ],
      "to": "TapNumber"
    },
    "integer": {
      "bit": 32,
      "priority": 1,
      "value": [
        -2147483648,
        2147483647
      ],
      "to": "TapNumber"
    },
    "short": {
      "bit": 16,
      "priority": 3,
      "value": [
        -32768,
        32767
      ],
      "to": "TapNumber"
    },
    "byte": {
      "bit": 8,
      "priority": 3,
      "value": [
        -128,
        127
      ],
      "to": "TapNumber"
    },
    "double": {
      "precision": [
        1,
        17
      ],
      "preferPrecision": 11,
      "scale": [
        0,
        17
      ],
      "preferScale": 4,
      "fixed": false,
      "to": "TapNumber"
    },
    "float": {
      "precision": [
        1,
        6
      ],
      "scale": [
        0,
        6
      ],
      "fixed": false,
      "to": "TapNumber"
    },
    "half_float": {
      "queryOnly": true,
      "fixed": false,
      "to": "TapNumber"
    },
    "scaled_float": {
      "queryOnly": true,
      "fixed": false,
      "to": "TapNumber"
    },
    "boolean": {
      "to": "TapBoolean"
    },
    "date": {
      "to": "TapDateTime"
    },
    "binary": {
      "to": "TapBinary"
    },
    "object": {
      "to": "TapString"
    }
  }
}