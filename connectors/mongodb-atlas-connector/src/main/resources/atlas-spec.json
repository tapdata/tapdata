    }
  },
  "dataTypes": {
    "DOUBLE": {
      "to": "TapNumber",
      "value": [
        "-1.7976931348623157E+308",
        "1.7976931348623157E+308"
      ],
      "preferPrecision": 20,
      "preferScale": 8,
      "scale": 17,
      "precision": 309,
      "fixed": true
    },
    "STRING[($byte)]": {
      "to": "TapString",
      "preferByte": "100",
      "byte": "16m"
    },
    "DOCUMENT": {
      "to": "TapMap",
      "byte": "16m"
    },
    "ARRAY": {
      "to": "TapArray",
      "byte": "16m"
    },
    "BINARY": {
      "to": "TapBinary",
      "byte": "16m"
    },
    "OBJECT_ID": {
      "to": "TapString",
      "byte": "24",
      "queryOnly": true
    },
    "BOOLEAN": {
      "to": "TapBoolean"
    },
    "DATE_TIME": {
      "to": "TapDateTime",
      "range": [
        "1000-01-01T00:00:00.001Z",
        "9999-12-31T23:59:59.999Z"
      ],
      "pattern": "yyyy-MM-dd'T'HH:mm:ss.SSS'Z'",
      "fraction": [
        0,
        3
      ],
      "defaultFraction": 3
    },
    "JAVASCRIPT": {
      "to": "TapString",
      "byte": "16m",
      "queryOnly": true
    },
    "SYMBOL": {
      "to": "TapString",
      "byte": "16m",
      "queryOnly": true
    },
    "INT32": {
      "to": "TapNumber",
      "bit": 32,
      "precision": 10,
      "value": [
        -2147483648,
        2147483647
      ]
    },
    "TIMESTAMP": {
      "to": "TapString",
      "queryOnly": true
    },
    "INT64": {
      "to": "TapNumber",
      "bit": 64,
      "value": [
        -9223372036854775808,
        9223372036854775807
      ]
    },
    "DECIMAL128": {
      "to": "TapNumber",
      "value": [
        -1E+6145,
        1E+6145
      ],
      "scale": 1000
    },
    "MIN_KEY": {
      "to": "TapString",
      "byte": "16m",
      "queryOnly": true
    },
    "MAX_KEY": {
      "to": "TapString",
      "byte": "16m",
      "queryOnly": true
    },
    "NULL": {
      "to": "TapRaw"
    }
  }
}
