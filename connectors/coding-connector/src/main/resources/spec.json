      "doc": "docs/coding_zh_CN.md"
    },
    "zh_TW": {
      "token": "權杖",
      "projectName": "項目名稱",
      "teamName": "團隊名稱",
      "webHook": "Service Hook",
      "hookButton": "生成服務URL",
      "iterationCodes": "迭代",
      "issueType": "事項类型",
      "allIssueType": "全部事項",
      "defectIssue": "缺陷",
      "requirementIssue": "需求",
      "missionIssue": "任務",
      "epicIssue": "史詩",
      "connectionMode": "連接模式",
      "document": "普通文檔格式",
